# Supabase Configuration
# IMPORTANT: Use VITE_ prefix for client-side variables (Vite framework requirement)
# DO NOT use NEXT_PUBLIC_ prefix - this is a Vite app, not Next.js!

VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Application URL - MUST match Supabase Site URL setting in dashboard
# For local development:
VITE_APP_URL=http://localhost:5173
# For production (set in Vercel environment variables):
# VITE_APP_URL=https://www.grantcue.com

# Server-side Supabase (for API routes only - NOT exposed to browser)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Email Configuration (Resend API for notifications)
RESEND_API_KEY=your-resend-key-here

# CORS Configuration (Security)
# Comma-separated list of allowed origins for API requests
# Example: ALLOWED_ORIGINS=https://grantcue.com,https://www.grantcue.com,https://app.grantcue.com
# Leave empty to use defaults (grantcue.com, www.grantcue.com, localhost:5173, localhost:3000)
ALLOWED_ORIGINS=

# Cron Job Security
# SECURITY REQUIREMENTS:
# - Must be at least 32 characters long
# - Use cryptographically random generation: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
# - MUST be rotated regularly (recommended: every 90 days)
# - Never commit to version control
# - Set rotation reminder in your calendar
# SECURITY: Uses timing-safe comparison to prevent timing attacks
CRON_SECRET=your-random-secret-here

# Two-Factor Authentication (2FA)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# CRITICAL: Keep this secret secure and backed up!
ENCRYPTION_KEY=your-64-character-hex-encryption-key-here

# Google Calendar OAuth
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_OAUTH_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your-google-client-secret
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:3000/api/oauth/google/callback

# Slack OAuth
# Get credentials from: https://api.slack.com/apps
SLACK_OAUTH_CLIENT_ID=your-slack-client-id
SLACK_OAUTH_CLIENT_SECRET=your-slack-client-secret
SLACK_OAUTH_REDIRECT_URI=http://localhost:3000/api/oauth/slack/callback

# Upstash Redis (Rate Limiting)
# Get credentials from: https://console.upstash.com/
# Create a new Redis database and copy the REST API credentials
# Rate limiting is optional - if not configured, endpoints will work without limits
UPSTASH_REDIS_REST_URL=https://your-redis-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-rest-token
